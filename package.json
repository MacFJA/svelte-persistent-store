{
  "name": "@macfja/svelte-persistent-store",
  "version": "1.1.1",
  "description": "A Svelte store that keep its value through pages and reloads",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src/",
    "dist/",
    "types",
    "LICENSE.md",
    "README.md"
  ],
  "dependencies": {
    "browser-cookies": "^1.2.0",
    "idb-keyval": "^5.1.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-typescript": "^8.2.5",
    "@tsconfig/svelte": "^1.0.13",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.24.0",
    "rollup": "^2.56.2",
    "rollup-plugin-svelte": "^7.1.0",
    "sirv-cli": "^1.0.12",
    "svelte": "^3.42.1",
    "svelte-check": "^1.6.0",
    "svelte-preprocess": "^4.7.4",
    "testcafe": "<1.15.0",
    "tslib": "^2.3.0",
    "typedoc": "^0.20.26",
    "typedoc-plugin-pages": "^1.1.0",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "svelte": "^3.0"
  },
  "scripts": {
    "doc": "typedoc src/index.ts",
    "lint": "eslint src/",
    "pretest": "rollup -c rollup.test.config.js",
    "test": "testcafe all tests/e2e.ts --app 'npx sirv tests'",
    "prebuild": "tsc",
    "build": "rollup -c",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/macfja/svelte-persistent-store.git"
  },
  "bugs": {
    "url": "https://github.com/macfja/svelte-persistent-store/issues"
  },
  "homepage": "https://github.com/macfja/svelte-persistent-store#readme",
  "author": "MacFJA",
  "license": "MIT",
  "types": "types/index.d.ts",
  "keywords": [
    "store",
    "persistent",
    "localStorage",
    "sessionStorage",
    "indexedDB",
    "cookie",
    "svelte",
    "sveltejs"
  ]
}
